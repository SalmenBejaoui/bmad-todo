  "devDependencies": {
    "@types/node": "^25.3.0",
    "dotenv": "^17.3.1",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
